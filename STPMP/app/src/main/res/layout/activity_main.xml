<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bsuir.semenowilya.stpmp.MainActivity">

    <Button
        android:text="@string/_btnLaba1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLabOne"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/_btnLaba2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLabTwo"
        android:elevation="0dp"
        android:layout_below="@+id/buttonLabOne"
        android:layout_alignLeft="@+id/buttonLabOne"
        android:layout_alignStart="@+id/buttonLabOne"
        android:layout_marginTop="28dp" />

    <Button
        android:text="@string/_btnKR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonKR"
        android:elevation="0dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttonLabThree"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/_btnLaba3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLabThree"
        android:elevation="0dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/buttonLabTwo"
        android:layout_alignLeft="@+id/buttonLabTwo"
        android:layout_alignStart="@+id/buttonLabTwo" />
</RelativeLayout>
